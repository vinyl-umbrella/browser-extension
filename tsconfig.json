{
    "include": [
        "src/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2015"
        ],
        "strict": true,
        "module": "ES2015",
        "target": "es5",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}
